<html>
    <head>
        
        <title>TechShots</title>
    </head>
    <body>
        <div>
            <% posts.forEach((post) => { %>
                <h2><%= post.title %></h2>
                <div><img src="<%= post.urlToImage %>" alt="<%= post.title %>"></div>
                <p><%= post.description %></p>
                <p><b>Source:</b> <a href="<%= post.url %>" target="blank"><%= post.source.id %></a></p>
                <p>
                    <span class="like-action" id="<%= post.title %>">Like</span> 
                    (<span>0</span>)
                </p>
            <% }) %>
        </div>
    <footer style="text-align: center;">
        TechShots uses <a href="https://newsapi.org/" target="blank">NEWSAPI</a>
    </footer>
    <script src="js/home.js"></script>
    </body>
</html>